/* 清理浮动 */
.fn-clear:after
  visibility: hidden
  display: block
  font-size: 0
  content: " "
  clear: both
  height: 0
.fn-clear
  zoom:1
/* 设置内联, 减少浮动带来的bug */
.fn-left, .fn-right
  display: inline-block
.fn-left
  float: left
.fn-right
  float: right


/*定位*/
.fn-rel
  position: relative
.fn-abs
  position: absolute


/* 文本对齐 */
.ta-left
  text-align: center
.ta-center
  text-align: center
.ta-right
  text-align: right


/* 单行文字溢出时出现省略号，需设定宽度 */
.fn-text-overflow
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
.fn-text-overflow2
  overflow: hidden
	display: -webkit-box
	-webkit-line-clamp: 2
	-webkit-box-orient: vertical

/* 绝对居中样式 */
.fn-abs-auto
  position: absolute
  top: 50%
  left: 50%
  transition: all .2s ease 0s
  transform: translateX(-50%) translateY(-50%)
// 上下居中
.just-auto
  display: -webkit-box
  display: flex
  flex-wrap: wrap
  min-height: 100%
  -webkit-box-pack: center
  justify-content: center
  -webkit-box-orient: vertical
  -webkit-box-direction: normal
  flex-direction: column


// 右向箭头
.arrow-right, .arrow-right-grey
  position: relative
  padding-right: 18px
  &:after
    content: ''
    position: absolute
    right: 0
    top: 50%
    width: 8px
    height: 8px
    border-right: 2px solid $color-border-active
    border-bottom: 2px solid $color-border-active
    transform: translateY(-50%) rotate(-45deg)
.arrow-right
  &:after
    border-right-color: $color-border-active
    border-bottom-color: $color-border-active
.arrow-right-grey
  &:after
    border-right-color: $color-grey-dark
    border-bottom-color: $color-grey-dark


// 关闭按钮
.close-default
  position: absolute
  left: 8px
  top: 50%
  width: 30px
  height: 30px
  transform: translateY(-50%)
  &:before, &:after
    content: ''
    position: absolute
    left: 50%
    top: 6px
    width: 1px
    height: 18px
    background-color: $color-grey-dark
  &:before
    transform: rotate(45deg)
  &:after
    transform: rotate(-45deg)
// 容器右侧圆圈关闭按钮
.close-circle
  position: absolute
  right: 0
  top: 50%
  width: 24px
  height: 24px
  border: 1px solid $color-border-light
  border-radius: 12px
  transform: translateY(-50%)
  &:before, &:after
    content: ''
    position: absolute
    left: 50%
    top: 4px
    width: 1px
    height: 14px
    background-color: $color-grey-dark
  &:before
    transform: translateX(-50%) rotate(45deg)
  &:after
    transform: translateX(-50%) rotate(-45deg)


// 三角形
.triangle
  &-up
  &-down
  &-up-yellow
  &-down-yellow
    position: relative
    &:before
      content: ''
      position: absolute
      right: 10px
      top: 50%
      border-left: 6px solid transparent
      border-right: 6px solid transparent
      transform: translateY(-50%)
  &-down
    &:before
      border-top: 6px solid $color-border-light
  &-up
    &:before
      border-bottom: 6px solid $color-border-light
  &-down-yellow
    &:before
      border-top: 6px solid $color-btn
  &-up-yellow
    &:before
      border-bottom: 6px solid $color-btn


// 小飞镖向下
.dart
  &-down
  &-up
    position: relative
    padding-right: 14px
    &:before
      content: ''
      position: absolute
      right: 0
      top: 50%
      width: 5px
      height: 5px
      border-left: 1px solid $color-grey-dark
      border-bottom: 1px solid $color-grey-dark
  &-down
    &:before
      transform: translateY(-50%) rotate(-45deg)
  &-up
    &:before
      transform: translateY(-50%) rotate(-220deg)


// 选中状态
.ischoosed
  position: relative
  &:after
    content: ''
    position: absolute
    right: 16px
    top: 50%
    width: 11px
    height: 5px
    border-left: 2px solid $color-border-active
    border-bottom: 2px solid $color-border-active
    transform: translateY(-50%) rotate(-45deg)


// 控制宽
#app
  width: 375px
  min-height: 100%
  margin: 0 auto
  background-color: $color-bg
.cont-contain
  padding-left: 16px
  padding-right: 16px
// 因为底部导航栏，父容器需要加的内边距
.sitenav-pad
  padding-bottom: 70px


/*
 * 按钮
 */
.btn-default-full, .btn-default
  text-align: center
  font-size: 17px
  color: #fff
  background-color: $color-btn
  &:active
    background-color: $color-btn-active
// 满宽按钮
.btn-default-full
  width: 100%
  height: 50px
  line-height: 50px
// 去边距按钮
.btn-default
  width: 375px - 32px
  height: 44px
  margin: 0 16px
  line-height: 44px
  border-radius: 7px

// 小按钮
.btn-small-default
  width: 200px
  height: 44px
  line-height: 44px
  border: 1px solid $color-border-light
  border-radius: 7px
  background-color: #fff

// 没有背景色的按钮
.btn-nobg, .btn-nobg-default
  height: 36px
  line-height: 36px
  border: 1px solid $color-border-light
  border-radius: 7px
  text-align: center
  font-size: 12px
  color: $color-grey-dark
.btn-nobg
  width: 140px
  background-color: transparent
.btn-nobg-default
  width: 375px - 32px
  margin: 0 auto
  background-color: #fff

/*
 * 输入框
 */

.input-default
  width: 100%
  height: 44px
  padding: 0 12px
  font-size: 16px
  background-color: #fff
  border: 1px solid $color-border-light
  border-radius: 3px
  input
    width: 100%
    height: 100%
